<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="specialeffects.junjie.com.okhtttp.APPStart">

    <TextView
        android:id="@+id/txt_wenzi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="OKHttp下载"
        android:textSize="22dp"/>

    <Button
        android:id="@+id/sync_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_wenzi"
        android:text="同步GET"/>

    <Button
        android:id="@+id/asynchronous_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_wenzi"
        android:layout_toRightOf="@id/sync_get"
        android:text="异步GET"/>

    <Button
        android:id="@+id/post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_wenzi"
        android:layout_toRightOf="@id/asynchronous_get"
        android:text="post表单提交"/>

    <Button
        android:id="@+id/filedownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_wenzi"
        android:layout_toRightOf="@id/post"
        android:text="文件下载"/>

    <Button
        android:id="@+id/get_String"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filedownload"
        android:text="文字同步get（有头文件）"/>

    <ImageView
        android:id="@+id/img_okhttp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/txt_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/get_String"/>
</RelativeLayout>
